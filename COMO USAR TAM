#include <stdio.h>
#include <string.h>
#include <locale.h>

#define TAM 2

 	int main(){
 		setlocale(LC_ALL,"");
 		
 		int i;
 		int idade[TAM];
 		char nome[TAM][200];
 		
 		for(i=0;i<TAM; i++){
		 
 		printf("\nDigite o %iº nome: ",i+1);
 		scanf("%s",&nome[i]);
 		
 		printf("\nDigite sua %iª idade: ",i+1);
 		scanf("%i",&idade[i]);
 	}

 		
 		printf("====Dados Cadrastados====\n");
 	    for(i=0;i<TAM;i++){
 		printf("Nome de usuário: %s \n",nome[i]);
 		printf("Idade de usuário: %i \n ",idade[i]);
		 }
 		
	 }
